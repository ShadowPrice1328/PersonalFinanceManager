@model CategoryAddRequest

@{
    ViewData["Title"] = "Create new category";
}

<div class="container">
    <div class="crud-form">
        <div class="form-head">
            <h1>Create</h1>
            <i class="fa-solid fa-circle-plus"></i>
        </div>
        <form asp-action="Create" autocomplete="off" style="margin-top: -30px;">
            <div asp-validation-summary="ModelOnly" class="text-bad"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-bad" style="font-size: 14px"></span>
            </div>
            <div class="form-group" style="margin-top: -30px;">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter category description" />
                <span asp-validation-for="Description" class="text-bad"></span>
            </div>
            <div class="form-group btn-group">
                <input type="submit" value="Create" class="btn btn-create" />
                <a asp-action="Index" class="btn btn-custom">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}