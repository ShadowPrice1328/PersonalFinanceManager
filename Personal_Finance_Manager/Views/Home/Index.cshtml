@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <div class="bg-light rounded p-3">
        <h1 class="display-4 text-black">Welcome to PFM</h1>
        <p class="text-black">Database connection status: 
            <span class="@Model.ConnectionStatusColor">@Model.ConnectionStatus</span></p>
    </div>

    @if (Model.ConnectionStatus == "Connection error!")
    {
        <p class="mt-4"><span class="@Model.ConnectionStatusColor"> @Model.ErrorMessage</span></p>
    }
    else
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <h2 class="mb-4">You have <span class="text-primary">@Model.Categories.Count()</span> categories:</h2>

                @foreach (var category in Model.Categories.ToList())
                {
                    <p class="mb-1" style="font-size: 18px;">@category.Name</p>
                }

                <h2 class="mt-4">Number of transactions: <span class="text-primary">@Model.TransactionCount</span></h2>
            </div>
        </div>
    }
</div>