@model TransactionResponse

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container">
    <div class="crud-form" style="margin-top: 3rem;">
        <div class="form-head">
            <h1>Delete</h1>
            <i class="fa-solid fa-trash"></i>
        </div>

        <div class="details-section">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Type)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Cost)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Cost)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Date, "_DateDisplay")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>

        <form asp-action="DeleteConfirm" method="post" class="form-group btn-group"
              style="width: 80%; margin-top: -10%; margin-bottom: 10%;">

            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" id="delete-btn"/>
            <a asp-action="Index" class="btn btn-custom" id="back-to-list-btn">Back</a>
        </form>
    </div>
</div>

<script src="~/js/confirm-deletion.js"></script>
